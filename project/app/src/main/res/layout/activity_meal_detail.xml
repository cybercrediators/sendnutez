<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MealDetailActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView4"
        android:name="send.nutez.Fragments.LowerButtonBarFragment"
        android:layout_width="394dp"
        android:layout_height="79dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mealDetailTable"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/mealDetailTitle"
        android:layout_width="263dp"
        android:layout_height="33dp"
        android:layout_weight="1"
        android:text="Meal Details"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/mealDetailTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29" />

    <de.codecrafters.tableview.TableView
        android:id="@+id/mealDetailTable"
        android:layout_width="360dp"
        android:layout_height="580dp"
        android:layout_marginBottom="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailDailyTitle"
        app:tableView_columnCount="20"
        app:tableView_headerColor="@color/recovery_colorPrimaryDark">

    </de.codecrafters.tableview.TableView>
</androidx.constraintlayout.widget.ConstraintLayout>